@model Exo_MVC1.Models.Compagnie_Utilisateur

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control bg-white" required  />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motdepasse" class="control-label"></label>
                <input asp-for="Motdepasse" class="form-control bg-white" required  />
                <span asp-validation-for="Motdepasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_utilisateur" class="control-label"></label>
                <select asp-for="Id_utilisateur" class ="form-control bg-white" required  asp-items="ViewBag.Id_utilisateur"></select>
            </div>
            <div class="form-group">
                <label asp-for="Id_compagnie" class="control-label"></label>
                <select asp-for="Id_compagnie" class ="form-control bg-white mb-3" required  asp-items="ViewBag.Id_compagnie"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ajouter" class="btn btn-success" />
            </div>
        </form>

