<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exo_MVC1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Exo_MVC1.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav id="mainNavbar" class="navbar bg-dark navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Exo_MVC1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-white" asp-area="" asp-controller="Sessions" asp-action="Index">Session</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admins" asp-action="Index">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Utilisateurs" asp-action="Index">Utilisateur</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Pratiquants" asp-action="Index">Pratiquant</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Presences" asp-action="Index">Presence</a>
                        </li>
                     
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Compagnies
                            </a>
                            <ul class="dropdown-menu bg-black" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-white" asp-area="" asp-controller="Compagnies" asp-action="Index">Compagnie</a></li>
                                <li><a class="dropdown-item text-white" asp-area="" asp-controller="Compagnie_Utilisateur" asp-action="Index">Utilisateur/Compagnie</a></li>
                                <li><a class="dropdown-item text-white" asp-area="" asp-controller="Activites" asp-action="Index">Activite/Compagnie</a></li>
                                <li><a class="dropdown-item text-white" asp-area="" asp-controller="Categories" asp-action="Index">Categorie/Activite</a></li>
                                <li><a class="dropdown-item text-white" asp-area="" asp-controller="Presences" asp-action="ByActiviteAndCompagnie">Presence/Compagnie</a></li>
                            </ul>

                        </li>
                       

                    </ul>
                    <form asp-controller="Admins" asp-action="Logout" method="post" class="d-flex">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-light">Logout</button>
                    </form>

                    @* <partial name="_LoginPartial" /> *@
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="mainFooter" class="border-top footer text-muted bg-dark">
        <div class="container d-flex justify-content-center align-items-center text-white">
            &copy; 2024 - Exo_MVC1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
