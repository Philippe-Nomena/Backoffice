@model Exo_MVC1.Models.Admin

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

    <style>
    

        .container-xxl {
            height: 100vh; /* Full viewport height */
            display: flex; /* Center content */
            align-items: center;
            justify-content: center;
        }

        .authentication-wrapper {
            width: 100%;
            max-width: 400px; /* Limit width of the card */
            margin: auto; /* Center the card */
        }

        .card {
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }

        .card-body {
            padding: 2rem; /* Increased padding for comfort */
        }

        h4 {
            color: #007bff; /* Primary color for the heading */
            font-weight: bold; /* Bold heading */
        }

        .mb-1 {
            margin-bottom: 1rem; /* Spacing between elements */
        }

        .mb-6 {
            margin-bottom: 1.5rem; /* Consistent spacing */
        }

        .form-label {
            font-weight: 600; /* Bold labels */
        }

        .btn-primary {
            background-color: #007bff; /* Bootstrap primary color */
            border-color: #007bff; /* Button border color */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker on hover */
            }

        .text-center {
            margin-top: 1.5rem; /* Spacing above */
        }

        .text-danger {
            font-size: 0.875rem; /* Slightly smaller error messages */
        }
    </style>

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <h4 class="mb-4">Welcome to Sneat! 👋</h4>
                    <p class="mb-4">Please sign in to your account and start the adventure.</p>

                    <form id="formAuthentication" class="mb-4" action="/Admins/FunctionLogin" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Email or Username</label>
                            <input type="text" class="form-control" id="username" name="Username" asp-for="Username" placeholder="Enter your email or username" autofocus />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" id="password" class="form-control" name="Motdepasse" asp-for="Motdepasse" placeholder="Enter your password" />
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                            <span asp-validation-for="Motdepasse" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <div class="form-check mb-0">
                                <input class="form-check-input" type="checkbox" id="remember-me">
                                <label class="form-check-label" for="remember-me">Remember Me</label>
                            </div>
                            <a href="auth-forgot-password-basic.html"><span>Forgot Password?</span></a>
                        </div>

                        <div class="mb-4">
                            <button class="btn btn-primary d-grid w-100" type="submit">Login</button>
                        </div>
                    </form>

                    <p class="text-center">
                        <span>New on our platform?</span>
                        <a href="auth-register-basic.html"><span>Create an account</span></a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
