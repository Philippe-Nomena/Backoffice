@model Exo_MVC1.Models.Utilisateur

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<style>
    .bg-blue {
        background-color: #007bff; /* Adjust this to your preferred shade of blue */
        color: white; /* Text color */
        border: none; /* Optional: remove border */
        padding: 0.375rem 0.75rem; /* Padding for the button */
        border-radius: 0.25rem; /* Optional: rounded corners */
    }

        .bg-blue:hover {
            background-color: #0056b3; /* Darker shade for hover effect */
            color: white; /* Maintain text color on hover */
        }

</style>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nom" class="control-label text-black"></label>
                <input asp-for="Nom" class="form-control bg-white mb-3" required/>
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn bg-blue" />
            </div>
        </form>
    </div>
</div>

