@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#Id_activite').change(function () {
                var activiteId = $(this).val();
                if (activiteId) {
                    $.ajax({
                        url: '@Url.Action("GetCategories")',
                        type: 'GET',
                        data: { activiteId: activiteId },
                        success: function (data) {
                            var $categorieDropdown = $('#Id_categorie');
                            $categorieDropdown.empty();
                            $categorieDropdown.append('<option value="">Select Categorie</option>');
                            $.each(data, function (index, category) {
                                $categorieDropdown.append('<option value="' + category.id + '">' + category.name + '</option>');
                            });

                            // Set the current value if it's in the new list
                            var currentCategory = '@Model.Id_categorie';
                            $categorieDropdown.val(currentCategory);
                        },
                        error: function (xhr, status, error) {
                            console.error("AJAX error:", status, error);
                        }
                    });
                } else {
                    $('#Id_categorie').empty().append('<option value="">Select Categorie</option>');
                }
            });

            // Trigger change event on page load if needed
            var initialActiviteId = $('#Id_activite').val();
            if (initialActiviteId) {
                $('#Id_activite').trigger('change');
            }
        });
    </script>
}
